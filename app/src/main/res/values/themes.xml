<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Giftox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/secondaryBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DrawerItem" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
    </style>

    <style name="BottomNavItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_12sdp</item>
    </style>

    <style name="InputBox" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
    </style>

    <style name="RecOutlineBtn" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_rec_outline_btn</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
    </style>

    <style name="SearchBox" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/_24sdp</item>
        <item name="android:paddingEnd">@dimen/_24sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_oval_btn_pink</item>
        <item name="android:paddingStart">@dimen/_24sdp</item>
        <item name="android:paddingEnd">@dimen/_24sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
    </style>

    <style name="SettingsTab" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="DialogLabels" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/brown</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="DialogValues" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="PortfolioCards" parent="CardView">
        <item name="cardCornerRadius">@dimen/_12sdp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
    </style>

    <style name="PortfolioCardLabels" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/secondaryBlue</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>
</resources>