<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue">

    <ImageView
        android:id="@+id/giftIconIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:contentDescription="@null"
        android:src="@drawable/ic_gift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelChooseYourCelebrity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_extra_bold"
        android:gravity="center"
        android:text="@string/choose_your_celebrity"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@id/middleIconIv"
        app:layout_constraintTop_toBottomOf="@+id/giftIconIv" />

    <ImageView
        android:id="@+id/middleIconIv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_93sdp"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_on_boarding_page_2_top"
        app:layout_constraintBottom_toTopOf="@id/labelMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelChooseYourCelebrity" />

    <TextView
        android:id="@+id/labelMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_extra_bold"
        android:gravity="center"
        android:text="@string/for_various_categories"
        android:textColor="@color/secondaryBlue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:contentDescription="@null"
        android:src="@drawable/ic_on_boarding_page_2_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelMiddle" />

</androidx.constraintlayout.widget.ConstraintLayout>